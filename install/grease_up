#!/usr/bin/env sh
cd /tmp
WORK_DIR=shellGrease_installer
rm -rf $WORK_DIR
mkdir $WORK_DIR
cd $WORK_DIR
sudo apt-get -y install libcurl4-gnutls-dev libexpat1-dev gettext libz-dev libssl-dev asciidoc xmlto build-essential autoconf python-dev python-pip

#
# build git
wget https://github.com/git/git/archive/master.zip
unzip master.zip
cd git-master
make configure
./configure
make all
sudo make install
sudo cp contrib/completion/git-completion.bash /etc/bash_completion.d/

#
# build mercurial
cd /tmp/$WORK_DIR
wget http://selenic.com/hg/archive/tip.zip
unzip tip.zip
cd Mercurial-*
make all
sudo make install
sudo cp contrib/bash_completion /etc/base_completion.d/mercurial

#Get the dotfiles
cd /tmp/$WORK_DIR 
wget --quiet -O - https://bitbucket.org/nloadholtes/dotfiles/raw/1dea3617377aaf10d5a8f6182054a342fc062091/install.sh > install.sh
chmod +x install.sh
./install.sh

#
#Fix pip
sudo pip install --upgrade setuptools
sudo pip install --upgrade pip
sudo apt-get remove python-pip
sudo ln -s /usr/local/bin/pip /usr/bin/pip
