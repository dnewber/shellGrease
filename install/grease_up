#!/usr/bin/env sh
cd /tmp
sudo rm -rf git-master/ install.sh master.zip tip.zip Mercurial-*
sudo apt-get -y install libcurl4-gnutls-dev libexpat1-dev gettext libz-dev libssl-dev asciidoc xmlto build-essential autoconf python-dev python-pip

#
# build git
wget https://github.com/git/git/archive/master.zip
unzip master.zip
cd /tmp
cd git-master
make configure
./configure
make all
sudo make install

#
# build mercurial
cd /tmp
wget http://selenic.com/hg/archive/tip.zip
unzip tip.zip
cd Mercurial-*
make all
sudo make install

#Get the dotfiles
cd /tmp
wget --quiet -O - https://bitbucket.org/nloadholtes/dotfiles/raw/e414dbeaa4e4739d725179c77a0df6aaf6fa0fc0/install.sh > install.sh
chmod +x install.sh
./install.sh

#install shell grease
mkdir ~/bin
cd ~/bin
wget --quiet -O - https://github.com/nloadholtes/shellGrease/tarball/master | tar zxv --strip=1
